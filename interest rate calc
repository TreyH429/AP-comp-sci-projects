principle = 0
while principle <= 0:
    principle = float(input("Enter inital principal: "))
    if principle <= 0:  print ("Principal cannot be less than or equal to zero")

rate = 0
while rate <= 0:
    rate = float(input("Enter inital rate: "))
    if rate <= 0:  print ("Rate cannot be less than or equal to zero")

time = 0
while time <= 0:
    time = int(input("Enter loan time in years: "))
    if time <= 0:  print ("Time cannot be less than or equal to zero, you wizard!")
print(principle)
print(rate)
print(time)

total = principle * pow((1 + rate / 100), time)
print(f"Ballence:${total:.2f} ")
